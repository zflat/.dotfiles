# -*- mode: snippet -*-
# name: qsnip
# key: qsnip
# tel((string)$sql.' -- '.implode(',', $sql->getParams()));
# --
{
    $qsnippet      = $$0;
    $pvalsnippet   = $qsnippet->getParams();
    $strvalsnippet = (string)$qsnippet;
    while($currvalsnippet=array_shift($pvalsnippet)) {
        $strvalsnippet  = substr_replace($strvalsnippet, "'".$currvalsnippet."'", strpos($strvalsnippet, '?'), 1);
    }
    tel($strvalsnippet.';');
}
