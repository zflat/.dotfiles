"wmctrl -a -emacs"
  Control+Alt + k

"wmctrl -x -a terminator || wmctrl -x -a x-terminal"
  Control+Alt + j

"wmctrl -a -browser"
  Control+Alt + u

"wmctrl -a -ðŸ‘ï¸"
  Control+Alt + n

"wmctrl -x -a Firefox"
  Control+Alt + b

"wmctrl -x -a slack || wmctrl -x -a epiphany-chat"
  Control+Alt + y

"wmctrl -a Visual Studio Code"
  Control+Alt + i

"wmctrl -a MySQL Workbench"
  Control+Alt + m

