# Create file in /etc/udevmon.yaml
# Note, change the path to the .dual-function-keys file
# ${HOME}/.dotfiles/config/evdev/dual-function-keys.yaml
- JOB: "intercept -g $DEVNODE | dual-function-keys -c /home/rafael/.dual-function-keys.yaml | uinput -d $DEVNODE"
  DEVICE:
    EVENTS:
      EV_KEY: [KEY_SPACE,KEY_RIGHTALT]